-- Acessar coordenador
docker exec -it coordinator psql -U postgres -d tcc_db

-- Verificar dados pelo coordenador
SELECT
    f.id as funcionario_id,
    f.nome_funcionario,
    f.salario,
    d.nome_departamento
FROM
    funcionario f
JOIN
    departamento d ON f.id_departamento = d.id
ORDER BY d.id;

